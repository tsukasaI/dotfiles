{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "IS_DEMO": "TRUE",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(curl http://localhost:*)",
      "Bash(curl https://localhost:*)",
      "Bash(curl http://127.0.0.1:*)",
      "Bash(curl https://127.0.0.1:*)",
      "Bash(curl http://[::1]:*)",
      "Bash(curl https://[::1]:*)",
      "Bash(curl -X * http://localhost:*)",
      "Bash(curl -X * https://localhost:*)",
      "Bash(curl -X * http://127.0.0.1:*)",
      "Bash(curl -X * https://127.0.0.1:*)",
      "Bash(curl -H * http://localhost:*)",
      "Bash(curl -d * http://localhost:*)",
      "Bash(curl --data * http://localhost:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(bat:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(jq:*)",
      "Bash(cat:*)",
      "Bash(docker run:*)",
      "Bash(docker build:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(go vet:*)",
      "Bash(go test:*)",
      "Bash(go doc:*)",
      "Bash(go list:*)",
      "Bash(go get:*)",
      "Bash(go mod tidy:*)",
      "Bash(golangci-lint run:*)",
      "Bash(wait)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git restore:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git push:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)",
      "Bash(git rm:*)",
      "Bash(git tag:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr close:*)",
      "Bash(gh pr merge:*)",
      "Bash(printenv*)",
      "Bash(env)",
      "Bash(env *)",
      "Bash(export)",
      "Bash(set)",
      "Bash(*secret*)",
      "Bash(*credential*)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Read(.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "bun /Users/inouetsukasa/dotfiles/claude-code/statusline.ts"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  },
  "plansDirectory": ".claude/plans"
}
